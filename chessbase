#include <iostream>
using namespace std;

int nextPosition(int);

int main()
{
    int x = 0,y = 0;
    bool chessBoard[8][8];
    for(int i = 0; i < 8; i++)
        for(int j = 0; j < 8; j++)
            chessBoard[i][j] = 5;
    chessBoard[x][y] = 0;
    for(int i = 0; i < 8; i++)
    {
        chessBoard[x+i][y] = 0;
        chessBoard[x][y+i] = 0;
        chessBoard[x+i][y+i] = 0;
    }
    for(int i = 0; i < 8; i++)
    {
        for(int j = 0; j < 8; j++)
        {
            cout << chessBoard[i][j] << " ";

        }
        cout << endl;
    }

     for(int i = 0; i < 8; i++)
    {
        for(int j = 0; j < 8; j++)
        {
             if (chessBoard[i][j] == 1)
             {
                 x = j;
                 y = i;
                 break;
             }

        }
    }
    cout << "x = " << x << "     y = " << y << endl;

    return 0;
}
